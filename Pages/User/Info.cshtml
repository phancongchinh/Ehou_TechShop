@model TechShop.Models.Dto.UserInfoVM

@{
    ViewBag.Title = "User Info";
    Layout = "_Layout";
}

<h2>User Information</h2>

<div class="row">
    <dl class="row">
        <dt class="col-sm-4">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-4">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>
        <dt class="col-sm-4">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        @if (Model.IsAdmin)
        {
            <dt class="col-sm-4">
                Admin page
            </dt>
            <dd class="col-sm-10">
                <a href="/admin/products" class="btn btn-primary">Admin page</a>
            </dd>
        }
    </dl>
    <br>
    <hr>
    <div class="row">
        <a asp-action="UserPurchases" class="btn btn-link">Purchases </a>
    </div>
</div>