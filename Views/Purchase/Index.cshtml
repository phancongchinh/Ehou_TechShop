@model IEnumerable<TechShop.Models.Entity.Purchase>

@{
    ViewBag.Title = "Purchases";
    Layout = "_Layout";
}

<h2>Your Purchases</h2>

<div class="container">
    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <td class="col-2">Purchase No.</td>
                <td class="col-3">Created at</td>
                <td class="col-3">State</td>
                <td class="col-2">Total price</td>
                <td class="col-2"></td>
            </tr>
            </thead>
            <tbody>
            
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.Id</td>
                    <td>@i.CreationTime</td>
                    <td>@i.State</td>
                    <td>@i.PurchaseProducts.Sum(x => x.Price)</td>
                    <td class="col-3">
                        <a href="/purchase/info?purchaseId=@i.Id">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>