<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TechShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TechShop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item ms-auto">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Info">
                                Hello, <span class="text-primary">@User.Identity.Name</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ShoppingCart" asp-action="Index">
                                <i class="fa fa-shopping-cart"></i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-auto">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="d-flex">
    <div class="sidebar-menu d-flex flex-column px-4">
        @if (User.Identity != null && User.IsInRole("Administrator"))
        {
            <ul class="nav flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                <li class="nav-item my-2"><h5><b>Management</b></h5></li>
                <li class="nav-item">
                    <a href="/admin/users" class="nav-link align-middle px-0"> Users </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/products" class="nav-link align-middle px-0"> Products </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/categories" class="nav-link align-middle px-0"> Categories </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/purchases" class="nav-link align-middle px-0"> Purchases </a>
                </li>
            </ul>
        }

    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>


<footer class="border-top footer fixed-bottom text-muted">
    <div class="container">
        &copy; 2023 - TechShop by ChinhPC
    </div>
</footer>

<style>
.sidebar-menu {
    width: 18vw;
    max-width: 18vw;
    min-width: 18vw;
}

.container {
    margin-left: unset;
}

.footer {
    height: 60px;
    display: flex;
    align-items: center;
}   
.btn {
    min-width: 80px;
} 
</style>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>