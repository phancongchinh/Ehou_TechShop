@model TechShop.Models.Entity.Category

@{
    ViewBag.Title = "Add new category";
    Layout = "_Layout";
}

<h2>Add new category</h2>

<div class="row">
    <form asp-action="SaveCategory" enctype="multipart/form-data">
        <div class="d-flex">
            <div class="w-75">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        
        <div class="d-flex flex-row-reverse w-75">
            <button type="submit" class="btn btn-primary mt-5 ms-2">Save</button>
            <a asp-controller="Backoffice" asp-action="Categories" class="btn btn-outline-secondary mt-5">Back to list</a>
        </div>
    </form>
</div>
