@model TechShop.Models.Dto.ProductEditModel

@{
    ViewBag.Title = "Add new product";
    Layout = "_Layout";
}

<h2>Add new product</h2>

<div class="row">
    <form asp-action="Save" enctype="multipart/form-data">
        <div class="d-flex">
            <div class="w-25 mt-5">
                <img id="image" class="w-75"/>
            </div>
            
            <div class="w-75">
                <div class="form-group">
                    <input asp-for="Image" class="form-control" id="input-image"/>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Producer" class="control-label">Brand</label>
                    <input asp-for="Producer" class="form-control"/>
                    <span asp-validation-for="Producer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control"/>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input type="number" asp-for="Price" class="form-control"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control"/>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categories" class="control-label">Category</label>
                    <select name="Categories" asp-items="@Model.Categories" class="form-control"></select>
                    <span asp-validation-for="Categories" class="text-danger"></span>
                </div>
            </div>
            
        </div>
        
        <div class="d-flex flex-row-reverse">
            <button type="submit" class="btn btn-primary mt-5 ms-2">Save</button>
            <a asp-controller="Backoffice" asp-action="Products" class="btn btn-outline-secondary mt-5">Back to list</a>
        </div>
        
    </form>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script>

        $("#input-image").change(function () {
            if (this.files && this.files[0]) {
                let reader = new FileReader();
                reader.onload = function (e) {
                    $("#image").attr("src", e.target.result);
                };
                reader.readAsDataURL(this.files[0]);
            }
        });
    </script>
</div>